# ========================================
# Configuración Básica de la Aplicación
# ========================================
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
APP_VERSION=1.0.0

# ========================================
# Configuración de Base de Datos MySQL
# ========================================
DATABASE_URL=mysql+mysqlconnector://user:password@db:3306/subasteltor
DB_POOL_SIZE=5
DB_POOL_RECYCLE=3600

# ========================================
# Configuración de Redis
# ========================================
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=300

# ========================================
# Configuración de Seguridad JWT
# ========================================
JWT_SECRET=tu_super_secreto_aqui_32_chars_minimos
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ========================================
# Configuración CORS
# ========================================
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# ========================================
# Configuración Específica de Subastas
# ========================================
AUCTION_CLOSE_BUFFER=300
BID_INCREMENT_PERCENT=5.0
WS_MAX_CONNECTIONS=100